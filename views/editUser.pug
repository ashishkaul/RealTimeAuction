extends layout

block content
  h1= title
  p Welcome #{firstName}

  .container
  .row.centered-form
    .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title
            | Edit user
        .panel-body
          form(role='form', action= 'save', method='POST')
            .row
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  input#first_name.form-control.input-sm(type='text', name='first_name', value=firstName, required='true')
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  input#last_name.form-control.input-sm(type='text', name='last_name', value=lastName, required='true')
            .row
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  input#email.form-control.input-sm(type='email', name='email', value=email, disabled='')
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                    input#user_role.form-control.input-sm(type='text', name='user_role', value=userRole, disabled='')
            input.btn.btn-info.btn-block(type='submit', value='Save', formaction='save')