extends layout

block content
  h1= title
  p Welcome #{firstName}

  .container
  .row.centered-form
    .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title
            | User Profile
        .panel-body
          form(role='form', method='POST')
            .row
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="first_name")
                    small First Name
                  input#first_name.form-control.input-sm(type='text', name='first_name', disabled='', value=firstName)
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="last_Name")
                    small Last Name
                  input#last_name.form-control.input-sm(type='text', name='last_name', disabled='', value=lastName)
            .row
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="email")
                      small E-mail
                  input#email.form-control.input-sm(type='email', name='email', disabled='', value=email)
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="user_Role")
                    small User Role
                    input#user_role.form-control.input-sm(type='text', name='user_role', disabled='', value=userRole)
            input.btn.btn-info.btn-block(type='submit', value='Modify', formaction='modify')
            input.btn.btn-info.btn-block(type='submit', value='Delete', formaction='delete')